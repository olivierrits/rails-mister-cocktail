<h1><%= @cocktail.name %></h1>

<h3>Description</h3>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= "#{dose.description} - #{dose.ingredient.name}" %> - <%= link_to raw('<i class="fas fa-trash-alt"></i>'), dose_path(dose), method: :delete %></li>
  <% end %>
</ul>
<br>
<h3>"Add an ingredient"</h3>
<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.input :description %>
  <%= f.association :ingredient %>
  <%= f.submit %>
<% end %>
<br>
<hr>
<h3>Reviews</h3>
<ul>
  <% @cocktail.reviews.each do |review| %>
    <li><%= "*" * review.rating %><%=" - #{review.content}" %></li>
  <% end %>
</ul>
<h3>"Add a review"</h3>
<%= simple_form_for [@cocktail, @review] do |f| %>
  <%= f.input :content %>
  <%= f.select :rating, Review::STARS %>
  <%= f.submit %>
<% end %>
<br>
<hr>

<%= link_to "Back to Cocktail List", cocktails_path %>
<hr>

